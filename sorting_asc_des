//Ascending order

#include <xc.h>
#include<stdio.h>
void main() {

    int a[4] = {2,1,3,5};
    
    for(int i = 0 ;i< 3;i++){
        for(int j = 0 ; j< i-1;j++){
            if(a[j]>a[j+1]){
                int temp = a[j];
                a[j] = a[j+1];
                a[j+1] = temp;
            }
        }
    }
    
     
    
    TRISA =0;
    TRISB =0;
    TRISC =0;
    TRISD =0;
    
    PORTA=a[0];
    PORTB=a[1];
    PORTC=a[2];
    PORTD=a[3];
    
}
